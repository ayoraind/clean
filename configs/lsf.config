
workDir = params.workdir

executor {
    name = "lsf"
    queueSize = 100
}

singularity { 
    enabled = true
    autoMounts = true
    cacheDir = params.cachedir
}
            
process {   
	cache = "lenient"
      	//errorStrategy = "retry"
      	//maxRetries = 1

    withLabel: basics { cpus = 1 ; memory = '4 GB'; container = 'nanozoo/basics:1.0--da8477a' } 
    withLabel: bowtie2 { cpus = 12 ; memory = '8 GB'; container = 'nanozoo/bowtie2:2.3.5--a14d3f5' } 
    withLabel: minimap2 { cpus = 12 ; memory = '4 GB'; container = 'nanozoo/minimap2:2.17--caba7af' }
    withLabel: bbmap { cpus = 12 ; memory = '8 GB'; container = 'nanozoo/bbmap:38.79--07fb785' } 

}
